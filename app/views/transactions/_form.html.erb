<%= form_for crypto.transactions.new do |f| %>

  <%= f.hidden_field :crypto_id, value: crypto.id %>

  <%= f.hidden_field :todo, value: todo%>

  <input id="transaction-date" class="flatpickr flatpickr-input active date-picker graph-form" name="transaction[date]" type="text" placeholder="<%= Date.today %>" data-id="datetime" readonly="readonly">
  
  <%= f.text_field :amount, placeholder: "Amount" %>

  <%= f.text_field :price, placeholder: "Price" %>

  <%= f.submit("Update") %>

<% end %>