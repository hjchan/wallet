<%= form_for transaction do |f| %>

  <%= f.hidden_field :crypto_id, value: transaction.crypto_id %>

  <%= f.hidden_field :todo, value: transaction.todo %>

  <input id="transaction-<%=transaction.id%>-date" class="flatpickr flatpickr-input active date-picker graph-form" name="transaction[date]" type="text" data-id="datetime" readonly="readonly" value="<%=transaction.date%>">
  
  <%= f.text_field :amount, value: transaction.amount, placeholder: "Amount" %>

  <%= f.text_field :price, value: transaction.price, placeholder: "Price" %>

  <%= f.submit("Update") %>

<% end %>